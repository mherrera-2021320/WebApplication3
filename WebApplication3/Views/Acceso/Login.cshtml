
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<link href="~/EstiloNavbar/styles.css" rel="stylesheet" />

<h2>Login</h2>

<div class="row">
    <div class="alert-danger">
        @ViewBag.Error
    </div>

    <br />

    <form action="@Url.Content("~/Acceso/Login")" method="post">
        <div class="form-group">
            <label>Usuario</label>
            <input type="text" name="User" />
        </div>
        <br />
        <div class="form-group">
            <label>Contraseña </label>
            <input type="password" name="Pass" class="passw" id="Input" />

        </div>
        <div class="form-group">
            <input type="submit" value="Entrar" class="btn btn-success" />
        </div>
    </form>



    <script src="~/EstiloNavbar/script.js"></script>

</div>

