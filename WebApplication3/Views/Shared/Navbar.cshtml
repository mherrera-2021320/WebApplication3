
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Navbar</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href="~/EstiloNavbar/Navbar.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Styles.Render("~/bundles/modernizr")
</head>
<body>

    <nav class="navbar bg-body-tertiary fixed-top">
        <div class="container-fluid ">
            <h2 class="navbar-brand" href="#"> Nacel de CentroAmerica</h2>
            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="offcanvas offcanvas-end" data-bs-backdrop="static" tabindex="-1" id="offcanvasNavbar" aria-labelledby="staticBackdropLabel">
                <div class="offcanvas-header">
                    <h5 class="offcanvas-title" id="staticBackdropLabel">Offcanvas</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                    <div>
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="#">
                                    @Html.ActionLink("Modulos", "Index", "Modulo", new { area = "" }, new { @class = "nav-link active" })
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">
                                    @Html.ActionLink("Roles", "Index", "Rol", new { area = "" }, new { @class = "nav-link active" })
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">
                                    @Html.ActionLink("Usuarios", "Index", "Usuario", new { area = "" }, new { @class = "nav-link active" })
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">
                                    @Html.ActionLink("Operaciones", "Index", "Operaciones", new { area = "" }, new { @class = "nav-link active" })
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">
                                    @Html.ActionLink("Asignar Permisos", "Index", "RolOperacion", new { area = "" }, new { @class = "nav-link active" })
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">
                                    @Html.ActionLink("Puestos De Trabajo", "Index", "Puestos", new { area = "" }, new { @class = "nav-link active" })
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">
                                    @Html.ActionLink("Puestos De Trabajo", "Index", "Puestos", new { area = "" }, new { @class = "nav-link active" })
                                </a>
                            </li>
                            <br />
                            <hr />
                            <li class="nav-item">
                                <a class="nav-link" >
                                        @Html.ActionLink("Cerrar Secion", "Logout", "Cerrar", new { area = "" }, new { @class = " nav-link" })
                                </a>
                            </li>

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </nav>





    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>
