@model IEnumerable<WebApplication3.Models.direcciones>

@{
    ViewBag.Title = "Index";
}


<h1 class="display-4">Direcciones</h1>
<div class="btn-group btn-group-lg" role="group" aria-label="Large button group">
    <button type="button" class="btn btn-outline-primary">
        <a class="bi bi-plus-square-fill icon" href="@Url.Action("Create")"></a>
    </button>
</div>

<br />
<br />


<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.codigo)
            @Html.ActionLink(" ", "Index", new { orden = "codigo_asc" }, new { @class = "btn bi bi-arrow-bar-up icon" })
            @Html.ActionLink(" ", "Index", new { orden = "codigo_desc" }, new { @class = " btn bi bi-arrow-bar-down icon" })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.numero_casa)
            @Html.ActionLink(" ", "Index", new { orden = "numero_asc" }, new { @class = "btn bi bi-arrow-bar-up icon" })
            @Html.ActionLink(" ", "Index", new { orden = "numero_desc" }, new { @class = " btn bi bi-arrow-bar-down icon" })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.calle_direccion)
            @Html.ActionLink(" ", "Index", new { orden = "calle_asc" }, new { @class = "btn bi bi-arrow-bar-up icon" })
            @Html.ActionLink(" ", "Index", new { orden = "calle_desc" }, new { @class = " btn bi bi-arrow-bar-down icon" })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ciudad)
            @Html.ActionLink(" ", "Index", new { orden = "ciudad_asc" }, new { @class = "btn bi bi-arrow-bar-up icon" })
            @Html.ActionLink(" ", "Index", new { orden = "ciudad_desc" }, new { @class = " btn bi bi-arrow-bar-down icon" })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.codigo_postal)
            @Html.ActionLink(" ", "Index", new { orden = "postal_asc" }, new { @class = "btn bi bi-arrow-bar-up icon" })
            @Html.ActionLink(" ", "Index", new { orden = "postal_desc" }, new { @class = " btn bi bi-arrow-bar-down icon" })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.colonia)
            @Html.ActionLink(" ", "Index", new { orden = "colonia_asc" }, new { @class = "btn bi bi-arrow-bar-up icon" })
            @Html.ActionLink(" ", "Index", new { orden = "colonia_desc" }, new { @class = " btn bi bi-arrow-bar-down icon" })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.departamento)
            @Html.ActionLink(" ", "Index", new { orden = "departamento_asc" }, new { @class = "btn bi bi-arrow-bar-up icon" })
            @Html.ActionLink(" ", "Index", new { orden = "departamento_desc" }, new { @class = " btn bi bi-arrow-bar-down icon" })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.municipio)
            @Html.ActionLink(" ", "Index", new { orden = "municipio_asc" }, new { @class = "btn bi bi-arrow-bar-up icon" })
            @Html.ActionLink(" ", "Index", new { orden = "municipio_desc" }, new { @class = " btn bi bi-arrow-bar-down icon" })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estado_actual)
            @Html.ActionLink(" ", "Index", new { orden = "estado_asc" }, new { @class = "btn bi bi-arrow-bar-up icon" })
            @Html.ActionLink(" ", "Index", new { orden = "estado_desc" }, new { @class = " btn bi bi-arrow-bar-down icon" })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.numero_casa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.calle_direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ciudad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.codigo_postal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.colonia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.departamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.municipio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estado_actual)
            </td>
            <td>
                @Html.ActionLink(" ", "Edit", new { id = item.codigo }, new { @class = "btn btn-warning bi bi-pencil-fill" }) |
                @Html.ActionLink(" ", "Details", new { id = item.codigo }, new { @class = "btn btn-primary bi bi-list" }) |
                @Html.ActionLink(" ", "Delete", new { id = item.codigo }, new { @class = "btn btn-danger bi bi-folder-minus" })
            </td>
        </tr>
    }

</table>


<div class="btn-group btn-group-lg" role="group" aria-label="Large button group">
    <button type="button" class="btn btn-outline-primary">
        <a class="bi bi-cloud-download" href="@Url.Action("DescargarRPVehiculos")"></a>
    </button>
    <button type="button" class="btn btn-outline-primary">
        <a class="bi bi-eye-fill" href="@Url.Action("VistaPreviaRPVehiculos")"></a>
    </button>
</div>
